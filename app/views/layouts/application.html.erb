<!DOCTYPE html>
<html>
  <head>
    <title>LogMyJog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Mukta+Malar" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{Rails.application.credentials.google[:api_key]}"%>

    <script type="text/javascript">
      window.iphoneUrl = "<%= image_url('iphone.png') %>"
      window.backgroundUrl = "<%= image_url('background-splash2.png') %>"
    </script>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
